{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/prop-types": "off",
      "no-constant-condition": ["error", { "checkLoops": false }]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "linkComponents": [
        { "name": "Link", "linkAttribute": "to" },
        { "name": "EtherscanLink" }
      ]
    }
}
